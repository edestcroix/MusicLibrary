<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="MainView" parent="AdwBin">
    <child>
      <object class="AdwOverlaySplitView" id="queue_panel_split_view">
        <property name="sidebar-position">end</property>
        <property name="collapsed">True</property>
        <property name="min-sidebar-width">300</property>
        <property name="sidebar-width-fraction">0.43</property>
        <property name="sidebar">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Play Queue</property>
            <property name="child">
              <object class="RecordBoxPlayQueue" id="play_queue">
                <signal name="collapse" handler="_on_queue_toggle" />
              </object>
            </property>
          </object>
        </property>
        <property name="content">
          <object class="AdwNavigationPage" id="content_page">
            <property name="title" translatable="yes">Overview</property>
            <property name="child">
              <object class="AdwToastOverlay" id="toast">
                <child>
                  <object class="AdwToolbarView" id="toolbar_view">
                    <property name="reveal-bottom-bars">false</property>
                    <property name="bottom-bar-style">ADW_TOOLBAR_RAISED_BORDER</property>
                    <child type="top">
                      <object class="AdwHeaderBar">
                        <child type="start">
                          <object class="GtkButton" id="lists_toggle">
                            <property name="icon-name">sidebar-show-symbolic</property>
                            <property name="visible">False</property>
                          </object>
                        </child>
                        <child type="start">
                          <object class="GtkMenuButton" id="action_button">
                            <property name="icon-name">view-more-symbolic</property>
                            <property name="sensitive">false</property>
                            <property name="popover">
                              <object class="GtkPopover">
                                <style>
                                  <class name="menu" />
                                </style>
                                <child>
                                  <object class="GtkListBox">
                                    <signal name="row-activated" handler="_on_album_action" />
                                    <property name="selection-mode">GTK_SELECTION_NONE</property>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">media-playback-start-symbolic</property>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label">Play Album</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">list-add-symbolic</property>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label">Add to Queue</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child type="end">
                          <object class="GtkButton" id="queue_toggle">
                            <property name="icon-name">view-list-symbolic</property>
                            <property name="sensitive">false</property>
                            <signal name="clicked" handler="_on_queue_toggle" />
                          </object>
                        </child>
                        <child type="end">
                          <object class="GtkButton" id="return_to_album">
                            <property name="icon-name">document-revert-symbolic</property>
                            <property name="sensitive">false</property>
                            <property name="tooltip-text" translatable="yes">Return to playing album</property>
                            <signal name="clicked" handler="_on_return_to_album" />
                          </object>
                        </child>
                      </object>
                    </child>
                    <child type="bottom">
                      <object class="RecordBoxPlayerControls" id="player_controls" />
                    </child>
                    <property name="content">
                      <object class="RecordBoxAlbumView" id="album_overview">
                        <signal name="play_track" handler="_confirm_track_play" />
                        <signal name="add_track" handler="_on_add_track" />
                        <signal name="start_from_track" handler="_confirm_album_play" />
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
